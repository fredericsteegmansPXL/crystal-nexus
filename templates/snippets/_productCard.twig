<div class="card__layout">
    <div class="card">
        {% set sneakerImage = sneaker.image.one() %}
        {%  if sneakerImage %}
            <img src="{{ sneakerImage.url }}" alt="{{ sneakerImage.title }}" class="card-image">
        {% endif %}
        <div class="card__content">
            <h2 class="card__title">{{ item.titel }}</h2>
            <p class="card__description">{{ item.omschrijving }}</p>
        </div>
        <div class="card__details">
            <p class="card__price">{{ 'â‚¬' + item.prijs.toFixed(2) }}</p>
            <button @click="viewProductDetail(item.id)" class="card__button">{{ bekijkMeer }}</button>
        </div>
    </div>
</div>