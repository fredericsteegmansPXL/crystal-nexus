<div class="card__layout">
    <div class="card">
        {% set productImage = product.image.one() %}
        {% if productImage %}
            <img src="{{ productImage.url }}" alt="{{ productImage.title }}" class="card-image">
        {% endif %}
        <div class="card__content">
            <h2 class="card__title">{{ product.title }}</h2>
            <p class="card__description">{{ product.description }}</p>
        </div>
        <div class="card__details">
            <p class="card__price">{{ '€' ~ product.price|number_format(2, ',', '.') }}</p>
            <button onclick="viewProductDetail('{{ product.id }}')" class="card__button">Bekijk meer</button>
        </div>
    </div>
</div>





